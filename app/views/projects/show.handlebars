<div class="container">
  <div class="media project-heading">
    <div class="media-left">
      <a href="{{ ownerGithub foundProject.github }}" target="_blank">
        <img class="media-object"
              src="{{ foundProject.user.github.avatar_url}}"
              alt="{{ foundProject.user.name }}"
              width="100">
      </a>
    </div>
    <div class="media-body">
      <h2>{{ foundProject.name }}</h2>
      <h4 class="media-heading">
        developed by
        <a href="{{ ownerGithub foundProject.github }}" target="_blank">
          {{ foundProject.user.name }}
        </a>
      </h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <p class="lead">
        {{ foundProject.description}}
      </p>
      <img src="{{ foundProject.cover }}" alt="{{ foundProject.name }}" width="100%">
    </div>
    <div class="col-md-4">
      <h3>Feedback</h3>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
    </div>
  </div>

  {{#isOwner LOGGEDIN_USER foundProject.user}}
