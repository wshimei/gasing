      <label class="col-sm-2 control-label" for="project[category]">Category</label>
      <div class="col-sm-10">
        <select class="form-control" name="project[category]">
          {{#times 5}}
          {{#if }}

          {{else}}

          {{/if}}
          <option value="{{this}}">Project {{this}}</option>
          {{/times}}
        </select>
      </div>
    </div> --}}
    <div class="form-group">
      <label class="col-sm-2 control-label" for="project[cover]">Cover URL</label>
      <div class="col-sm-10">
        <input type="text"
                class="form-control"
                name="project[cover]"
                id="project[cover]"
                placeholder="Type your project's cover photo">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="project[description]">Description</label>
      <div class="col-sm-10">
        <textarea class="form-control"
                name="project[description]"
                id="project[description]"
                rows="4">
          {{ foundProject.description }}
        </textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </div>
  </form>
</div>
