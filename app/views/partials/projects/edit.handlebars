<div class="row">
  <h2 class="page-header text-center">Edit Project</h2>
  <form class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 control-label" for="project[name]">Project name</label>
      <div class="col-sm-10">
        <input type="text"
                class="form-control"
                name="project[name]"
                id="project[name]"
                placeholder="Type your project name"
                value="{{ foundProject.name }}">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="project[github]">Github URL</label>
      <div class="col-sm-10">
        <input type="text"
                class="form-control"
                name="project[github]"
                id="project[github]"
                placeholder="Type your project's github url"
                value="{{ foundProject.github }}">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="project[public]">Live URL</label>
      <div class="col-sm-10">
        <input type="text"
                class="form-control"
                name="project[public]"
                id="project[public]"
                placeholder="Type your project's live url"
                value="{{ foundProject.public }}">
      </div>
    </div>
